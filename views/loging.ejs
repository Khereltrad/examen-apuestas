<!DOCTYPE html>
<html lang="es">
    <head>
        <%- include('templates/head1') %> 

        <link rel="icon"  type="image/ico" href="img/favicon.ico">
        <title> Loging °°° </title>
    </head>
    <body class="bg-dark">
        <style>
           .txwhite{color: aliceblue;}
        </style>
        <div class="container-xl p-0 m-4 mr-0" style="text-align:-webkit-center;"> 
            <div class="P-0" style="height:500px;">
            <tbody>
                <div class="container">
                    <div class="row p-3" style="justify-content:center;">
                    <div class="form-row rounded-lg p-5 m-5" style="background-color: #e2e461;">
                        <form id="form-login" action="/datosloging" method="POST" class="col s6" >       <!-- datosloging : { email, password }-->
                            <div class="form-group">
                            <div class="div mb-3"> <h4>Bienvenidos!</h4></div>    <!-- titulo -->
                            <label for="InputEmail">Email </label>
                            <input type="email" class="form-control validate" name="email" id="InputEmail" aria-describedby="emailHelp" required />
                            <small id="emailHelp" class="form-text">Ingresar con su correo tras ya estar registrado.</small>
                            </div>
                            <div class="form-group">
                            <label for="pwinpt">Contraseña</label>
                            <input type="password" class="form-control validate" name="password" id="pwinpt"required/></div>
                            <div class="row">
                                <button type="submit" class="btn-sm btn-info btn-block m-3 text-dark">Ingresar</button>
                                <a class="btn-sm btn-block" href="http://localhost:8000/register"><button type="button" class="btn btn-success"> Registrarse </button></a>
                            </div>
                        </form>
                    </div>
                    </div>
                </div>
            </tbody>
            </div>
        </div>
        <!-- <script src="/socket.io/socket.io.js"></script> -->
        <script type ="text/javascript">

            $(document).ready(function () {
            
                function hablar(mensaje) {
                    let msg = new SpeechSynthesisUtterance();
                    msg.text = mensaje;
                    window.speechSynthesis.speak(msg)
                }                
            });
        </script>
    </body>
</html>
